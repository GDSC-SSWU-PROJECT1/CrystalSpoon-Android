<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/newr_img_only"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_only" />

    <androidx.cardview.widget.CardView
        android:id="@+id/newr_card_view"
        android:layout_width="253dp"
        android:layout_height="366dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="24dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/newr_img_only"
        android:background="@drawable/newrest_img_round">

        <TextView
            android:id="@+id/newr_txt_unvisitedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="로스디아스"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/newr_txt_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="카페"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/newr_txt_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_marginRight="60dp"
            android:text="성북구"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/newr_txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:text="2km"
            android:textColor="@color/black"/>

        <androidx.cardview.widget.CardView
            android:layout_width="207dp"
            android:layout_height="254dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/newr_img_unvisitedImage"
                android:layout_width="207dp"
                android:layout_height="254dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_losdias" />
        </androidx.cardview.widget.CardView>


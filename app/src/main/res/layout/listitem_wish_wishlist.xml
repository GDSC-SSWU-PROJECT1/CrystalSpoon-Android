<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:background="@drawable/wish_style_rest"
    android:paddingLeft="17dp"
    android:paddingTop="18dp"
    android:paddingRight="17dp"
    android:paddingBottom="18dp">

    <ImageView
        android:id="@+id/img_food"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/wish_style_img_restaurant"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_greekday" />

    <LinearLayout
        android:id="@+id/linear_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_food"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:text="그릭데이"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_spoon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15.47dp"
                android:layout_marginLeft="15.47dp"
                android:src="@drawable/ic_spoon_fill" />

            <ImageView
                android:id="@+id/img_spoon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_marginLeft="-8dp"
                android:src="@drawable/ic_spoon_fill" />

            <ImageView
                android:id="@+id/img_spoon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_marginLeft="-8dp"
                android:src="@drawable/ic_spoon_fill" />

            <ImageView
                android:id="@+id/img_spoon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_marginLeft="-8dp"
                android:src="@drawable/ic_spoon_fill" />

            <ImageView
                android:id="@+id/img_spoon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-8dp"
                android:layout_marginLeft="-8dp"
                android:src="@drawable/ic_spoon_fill" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/text_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_reviewInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.79dp"
                android:layout_marginLeft="20.79dp"
                android:text="876개"
                android:textColor="#838383" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/text_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대표메뉴"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/text_menuInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20.79dp"
                android:layout_marginLeft="20.79dp"
                android:text="귤팡L"
                android:textColor="#838383" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="54dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FFFFFF"
                app:srcCompat="@drawable/back_icon"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/search_edit_search"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_edittext_background"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:text="무엇을 찾고 계신가요?"
                android:textColor="#BCA6F9"
                android:textSize="14dp"
                android:layout_marginBottom="30dp"/>

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="51dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/search_icon_background"
                app:srcCompat="@drawable/search_icon"
                tools:ignore="SpeakableTextPresentCheck"
                android:elevation="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textSize="16dp"
            android:textColor="#BCA6F9"
            android:text="지금 다들 찾아보는 메뉴" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            tools:listitem="@layout/search_popularity_menu_items"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="#BCA6F9" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="30dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#BCA6F9"
                android:text="최근 검색어" />


            <TextView
                android:id="@+id/searchHistoryAllDeleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity=""
                android:gravity="right"
                android:text="전체삭제"
                android:textColor="#83838383"
                android:textSize="12dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="SpeakableTextPresentCheck"
            tools:listitem="@layout/search_my_research_items"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>